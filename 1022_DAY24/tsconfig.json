{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    //@골뱅이로 이미지를 불러오기 위해서 여기부터 내용 작성
    "baseUrl": ".", // 프로젝트 루트를 기준으로 설정
    "paths": {
      "@assets/*": ["src/assets/*"] // @assets 경로 별칭 추가
    }
    //여기까지 추가
  },
  "include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
